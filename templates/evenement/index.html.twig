{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Affiche</th>
                <th>TarifLibre</th>
                <th>TarifMembre</th>
                <th>DatePublication</th>
                <th>Description</th>
                <th>LienInscription</th>
                <th>DateLimiteInscription</th>
                <th>PlacesRestantes</th>
                <th>AfficheFerme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.affiche }}</td>
                <td>{{ evenement.tarifLibre }}</td>
                <td>{{ evenement.tarifMembre }}</td>
                <td>{{ evenement.datePublication ? evenement.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.lienInscription }}</td>
                <td>{{ evenement.dateLimiteInscription ? evenement.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.placesRestantes }}</td>
                <td>{{ evenement.afficheFerme }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
